<UserControl x:Class="MESHNETWORK.MyControls.MessageVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MESHNETWORK.MyControls"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="10">
    <Grid>
        
        
        <Ellipse Panel.ZIndex="10" x:Name="Message" Width="10" Height="10" Stroke="#FF232323" StrokeThickness="1">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FFFFED7A" Offset="1"/>
                    <GradientStop Color="#FFFFF7C5"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
